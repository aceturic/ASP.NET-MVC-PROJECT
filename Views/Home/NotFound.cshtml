@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container-fluid d-flex flex-column justify-content-center align-items-center vh-100 bg-custom-dark">
    <div class="error-container">
        <h1 class="display-4 fw-bold mb-3" style="font-size: 100px;">404</h1>
        <h2 class="mb-4" style="font-size: 30px;">Oops! The page you're looking for doesn't exist.</h2>
        <div class="mb-4">
            <img src="https://via.placeholder.com/400x300/ffb6b6/ffffff?text=404+Error" alt="404 Image" class="img-fluid rounded shadow-sm" />
        </div>
        <p class="lead mb-4">
            Looks like the page you were trying to reach has either moved or doesn't exist anymore.
            But don't worry, you can get back on track easily.
        </p>
        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-primary px-5 py-3 rounded-pill shadow-sm">
                Back to Home
            </a>
            <a href="javascript:history.back()" class="btn btn-lg btn-outline-light px-5 py-3 rounded-pill shadow-sm">
                Go Back
            </a>
        </div>
        <div class="mt-3">
            <a href="https://www.youtube.com/watch?v=48rz8udZBmQ" class="btn btn-lg btn-success px-5 py-3 rounded-pill shadow-sm" target="_blank">
                Go to the page anyway
            </a>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #121212;
        color: #e0e0e0;
    }

    .bg-custom-dark {
        background-color: #121212;
    }

    .error-container {
        max-width: 600px;
        padding: 30px;
        text-align: center;
        background-color: #1e1e1e;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(255, 255, 255, 0.1);
    }

    h1 {
        font-family: 'Roboto', sans-serif;
        font-weight: 700;
        color: #e0e0e0;
    }

    h2 {
        font-family: 'Arial', sans-serif;
        color: #ccc;
    }

    .lead {
        font-size: 20px;
        color: #aaa;
    }

    img {
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(255, 255, 255, 0.1);
        max-width: 100%;
    }

    .btn {
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-primary {
        background-color: #ff6f61;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #e65a50;
            box-shadow: 0 6px 16px rgba(255, 111, 97, 0.5);
        }

    .btn-outline-light {
        border: 2px solid #e0e0e0;
        color: #e0e0e0;
        background-color: transparent;
    }

        .btn-outline-light:hover {
            background-color: #e0e0e0;
            color: #121212;
        }

    .btn-success {
        background-color: #28a745;
        color: #fff;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>

