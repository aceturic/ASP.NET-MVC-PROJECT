<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Stores</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }

        h1 {
            font-weight: bold;
        }

        .contact-info {
            margin-bottom: 20px;
        }

        #map-canvas {
            width: 100%;
            height: 500px;
            margin-top: 20px;
        }

        /* Style for the container holding the map and the button */
        .map-container {
            position: relative;
            width: 100%;
            height: 600px; /* Adjusted to accommodate the button */
        }

        /* Style for the button */
        .store-button {
            position: absolute;
            bottom: 20px; /* Distance from the bottom of the map */
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 20px;
            font-size: 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .store-button:hover {
                background-color: #45a049;
            }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAVTlkinAbiW7LP-u0XfbOA2BMthvsfgaY"></script>
    <script type="text/javascript">
        function initialize() {
            var mapOptions = {
                zoom: 2,
                center: new google.maps.LatLng(20, 0),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

            var markers = [];
            var infoWindow = new google.maps.InfoWindow();

            // Add markers for each location
        @foreach (var location in Model)
        {
            <text>
                        var marker = new google.maps.Marker({
                            position: new google.maps.LatLng(@location.Latitude, @location.Longitude),
                            map: map,
                            title: '@location.Name'
                        });
                        markers.push(marker);

                        google.maps.event.addListener(marker, 'click', (function(marker) {
                            return function() {
                                infoWindow.setContent('<div><strong>' + marker.title + '</strong><br>' +
                                    '@location.Description' + '</div>');
                                infoWindow.open(map, marker);
                            }
                        })(marker));
            </text>
        }
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
</head>
<body>
    <h1>Our Stores</h1>
    <div class="contact-info">
        <p>
            <a href="tel:+1-800-555-5555">+1-800-555-5555</a> |
            <a href="tel:+1-800-555-5556">+1-800-555-5556</a>
        </p>
    </div>
    <div class="map-container">
        <div id="map-canvas"></div>
        <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">
            Go to our Store Page
        </a>
    </div>
</body>
</html>
