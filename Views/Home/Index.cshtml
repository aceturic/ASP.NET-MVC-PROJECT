<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Stores</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            color: #333;
            opacity: 0;
            transition: opacity 1s ease-in;
        }

            body.loaded {
                opacity: 1;
            }

        h1 {
             text-align: center;
            font-weight: 700;
            color: #4CAF50;
            margin: 0;
            animation: fadeIn 2s ease-out forwards;
        }

        h2 {
            font-weight: 700;
            color: #4CAF50;
            margin-top: 30px;
            transform: scale(0.95);
            transition: transform 0.3s ease;
        }

            h2:hover {
                transform: scale(1);
            }

        .contact-info {
            margin: 20px 0;
            font-size: 1.1em;
        }

            .contact-info a {
                color: #4CAF50;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .contact-info a:hover {
                    color: #388E3C;
                }

        /* Map container styling */
        .map-container {
            position: relative;
            width: 100%;
            height: 600px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 20px;
            transform: scale(0.95);
            transition: transform 0.3s ease;
        }

            .map-container:hover {
                transform: scale(1);
            }

        #map-canvas {
            width: 100%;
            height: 100%;
        }

        /* Button Styling */
        .store-button {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%) scale(0.95);
            transition: transform 0.3s ease, background-color 0.3s ease;
            padding: 12px 24px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 30px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

            .store-button:hover {
                transform: translateX(-50%) scale(1);
                background-color: #45a049;
            }

            .store-button:focus {
                outline: none;
            }

        /* Info Window Styling */
        .info-window {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 14px;
            color: #333;
        }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAVTlkinAbiW7LP-u0XfbOA2BMthvsfgaY"></script>
    <script type="text/javascript">
        var map, infoWindow;

        function initialize() {
            var mapOptions = {
                zoom: 2,
                draggable: true,
                center: new google.maps.LatLng(20, 0),
                mapTypeId: google.maps.MapTypeId.HYBRID,
                mapTypeControl: false,
            };
            map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
            infoWindow = new google.maps.InfoWindow();

            var locations = [
                { name: 'Store 1', latitude: 40.7128, longitude: -74.0060 },
                { name: 'Store 2', latitude: 34.0522, longitude: -118.2437 },
                { name: 'Store 3', latitude: 51.5074, longitude: -0.1278 }
            ];

            locations.forEach(function(location) {
                var marker = new google.maps.Marker({
                    position: new google.maps.LatLng(location.latitude, location.longitude),
                    map: map,
                    title: location.name
                });

                marker.addListener('click', function() {
                    var contentString = '<div class="info-window"><strong>' + this.title + '</strong><br>' +
                                         'Latitude: ' + this.position.lat() + '<br>' +
                                         'Longitude: ' + this.position.lng() + '<br>' +
                                         '<a href="https://www.google.com/maps/search/?api=1&query=' + this.position.lat() + ',' + this.position.lng() + '" target="_blank">Set Location</a></div>';
                    infoWindow.setContent(contentString);
                    infoWindow.open(map, this);
                });
            });
        }


        window.onload = function() {
            document.body.classList.add('loaded');
            initialize();
        };
    </script>
</head>
<body>
    <h1>MyStore</h1>
    <h2>Our Stores</h2>
    <div class="contact-info">
        <p>
            <a href="tel:+1-800-555-5555">+1-800-555-5555</a> |
            <a href="tel:+1-800-555-5556">+1-800-555-5556</a>
        </p>
    </div>
    <div class="map-container">
        <div id="map-canvas"></div>
        <a class="store-button" href="@Url.Action("Index", "Store")">
            Go to our Store Page
        </a>
    </div>
</body>
</html>
