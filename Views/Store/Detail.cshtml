@model UsersApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-5">
    <div class="row">
        <!-- Left column: Product image -->
        <div class="col-md-5">
            <img src="@(string.IsNullOrEmpty(Model.ImageFileName) ? "/images/placeholder.png" : "/images/" + Model.ImageFileName)"
                 alt="@Model.Name"
                 class="img-fluid rounded shadow-sm" />
        </div>

        <!-- Right column: Product details -->
        <div class="col-md-7 d-flex flex-column justify-content-center">
            <h1 class="mb-4">@Model.Name</h1>
            <p><strong>Brand:</strong> @Model.Brand</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Description:</strong> @Model.Description</p>

            <!-- Action buttons -->
            <div class="mt-3">
                <!-- Buy Now button posts to AddToCart action -->
                <form asp-controller="Store"
                      asp-action="AddToCart"
                      asp-route-id="@Model.Id"
                      method="post"
                      class="d-inline">
                    <button type="submit" class="btn btn-primary me-2">
                        Buy Now
                    </button>
                </form>
                <!-- Back to Store link -->
                <a asp-controller="Store"
                   asp-action="Index"
                   class="btn btn-secondary">
                    Back to Store
                </a>
            </div>
        </div>
    </div>
</div>
