@model Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">@Model.Name</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageFileName))
            {
                <img src="~/products/@Model.ImageFileName" class="img-fluid" alt="@Model.Name" />
            }
            else
            {
                <img src="~/images/placeholder.png" class="img-fluid" alt="No image available" />
            }
        </div>
        <div class="col-md-6">
            <p><strong>Brand:</strong> @Model.Brand</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <div>
                <a asp-controller="Order" asp-action="OrderDetails" asp-route-productId="@Model.Id" class="btn btn-primary">Buy Now</a>
            </div>
        </div>
    </div>
</div>
