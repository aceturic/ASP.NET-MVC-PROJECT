        }
    body {
        background-color: #ffffff;
        color: #000000;
    }

    footer {
        background-color: #f1f1f1;
        color: #333;
    }

    media (prefers-color-scheme: dark) {
        body

    {
        background-color: #121212;
        color: #e0e0e0;
    }

    footer {
        background-color: #1f1f1f;
        color: #e0e0e0;
    }

    }

    .user-menu {
        color: #2c3e50 !important;
        text-decoration: none !important;
        transition: all 0.3s ease;
        position: relative;
        padding: 8px 15px !important;
        border-radius: 8px !important;
    }

        .user-menu:hover {
            background: rgba(46, 134, 222, 0.1) !important;
        }

        .user-menu::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            width: 0;
            height: 2px;
            background: #2e86de;
            transition: all 0.3s ease;
        }

        .user-menu:hover::after {
            width: calc(100% - 30px);
            left: 15px;
        }

    .user-dropdown {
        border: none !important;
        box-shadow: 0 5px 25px rgba(0,0,0,0.1);
        border-radius: 12px !important;
        padding: 10px 0 !important;
        margin-top: 10px !important;
        min-width: 220px;
        transform: translateY(10px);
        transition: all 0.3s ease;
        background: #ffffff;
    }

        .user-dropdown .dropdown-item {
            position: relative;
            padding: 12px 20px !important;
            color: #2c3e50;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

            .user-dropdown .dropdown-item:hover {
                background: transparent !important;
                color: #2e86de !important;
                padding-left: 25px !important;
            }

            .user-dropdown .dropdown-item .hover-line {
                position: absolute;
                left: 0;
                bottom: 0;
                width: 3px;
                height: 0;
                background: #2e86de;
                transition: all 0.3s ease;
            }

            .user-dropdown .dropdown-item:hover .hover-line {
                height: 100%;
            }

        .user-dropdown .dropdown-divider {
            margin: 10px 0;
            border-color: #eee;
        }

    /* Dark mode styles */
    body.dark-mode .user-menu {
        color: #ecf0f1 !important;
    }

        body.dark-mode .user-menu:hover {
            background: rgba(255,255,255,0.1) !important;
        }

    body.dark-mode .user-dropdown {
        background: #2c3e50;
        box-shadow: 0 5px 25px rgba(0,0,0,0.3);
    }

        body.dark-mode .user-dropdown .dropdown-item {
            color: #ecf0f1;
        }

            body.dark-mode .user-dropdown .dropdown-item:hover {
                color: #2e86de !important;
            }

        body.dark-mode .user-dropdown .dropdown-divider {
            border-color: #34495e;
        }
</style>