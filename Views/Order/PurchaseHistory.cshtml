@model List<UsersApp.Models.Order>

@{
    ViewData["Title"] = "Purchase History";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🛍️ My Purchase History</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p>You have no past orders. Start shopping now!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@order.Product.Name</h5>
                            <p class="card-text">
                                <strong>Price:</strong> <span class="badge bg-success">@order.Price.ToString("C")</span>
                            </p>
                            <p>
                                <strong>Delivery Address:</strong> @order.DeliveryAddress, @order.City, @order.Country (@order.ZipCode)
                            </p>
                            <p><strong>Phone:</strong> @order.PhoneNumber</p>
                            <p class="text-muted">
                                <strong>Order Date:</strong> <span class="badge bg-secondary">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</span>
                            </p>

                            <!-- Buttons - Updated Product Details Button -->
                            <div class="d-flex gap-2 mt-3">
                                <!-- Product Details (Updated) -->
                                <a asp-controller="ProductDetails" asp-action="Index" asp-route-id="@order.ProductId" 
                                   class="btn btn-outline-secondary flex-grow-1 text-center">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>

                                <!-- Re-Route Order -->
                                <a asp-controller="Order" asp-action="ReRoute" asp-route-id="@order.Id" 
                                   class="btn btn-warning flex-grow-1 text-center">
                                    <i class="bi bi-truck"></i> Re-Route
                                </a>
                            </div>

                            <!-- Cancel Order Button (New Row for Better Alignment) -->
                            <div class="d-flex mt-2">
                                <form asp-controller="Order" asp-action="CancelOrder" method="post" class="w-100">
                                    <input type="hidden" name="orderId" value="@order.Id" />
                                    <button type="submit" class="btn btn-danger w-100" 
                                            onclick="return confirm('Are you sure you want to cancel this order?');">
                                        <i class="bi bi-x-circle"></i> Cancel
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.03);
        }

    .badge {
        font-size: 14px;
        padding: 8px;
    }


    .card .btn {
        text-align: center;
        font-size: 14px;
        padding: 8px 12px;
        min-width: 30%;
    }

    .card .btn-sm {
        font-size: 14px;
        padding: 6px 10px;
    }

    .card .btn i {
        margin-right: 5px;
    }

    media (max-width: 768px) {
        .card .btn

    {
        width: 100%; /* Full-width buttons on smaller screens */
    }

    }


</style>