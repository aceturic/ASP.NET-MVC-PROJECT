@model IEnumerable<UsersApp.Models.Order>

@{
    ViewData["Title"] = "Purchase History";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<div class="container mt-4">
    <h2 class="text-center">🛍️ My Purchase History</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p>You have no past orders.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">

                            <h5 class="card-title text-primary">Поръчани продукти:</h5>
                            <ul class="mb-2">
                                @foreach (var item in order.Items)
                                {
                                    <li>@item.Product.Name x @item.Quantity (@item.Price.ToString("C"))</li>
                                }
                            </ul>

                            <p>
                                <strong>Общо:</strong> <span class="badge bg-success">
                                    @order.Items.Sum(i => i.Price * i.Quantity).ToString("C")
                                </span>
                            </p>

                            <p><strong>Адрес:</strong> @order.DeliveryAddress, @order.City, @order.Country (@order.ZipCode)</p>
                            <p><strong>Телефон:</strong> @order.PhoneNumber</p>
                            <p class="text-muted">
                                <strong>Дата:</strong> <span class="badge bg-secondary">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</span>
                            </p>

                            <!-- Статус -->
                            <p>
                                <strong>Статус:</strong>
                                @if (order.Status == OrderStatus.PendingCancellation)
                                {
                                    <span class="badge bg-warning">Чака одобрение</span>
                                }
                                else if (order.Status == OrderStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Отменена</span>
                                }
                                else if (order.Status == OrderStatus.Rejected)
                                {
                                    <span class="badge bg-info">Отказано</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Обработва се</span>
                                }
                            </p>

                            <!-- Buttons for Actions -->
                            <div class="d-flex gap-2 mt-3">
                                <!-- Product Details -->
                                <h6 class="text-muted">Продукти:</h6>
                                <ul>
                                    @foreach (var item in order.Items)
                                    {
                                        <li>
                                            @item.Product.Name
                                            <a asp-controller="ProductDetails" asp-action="Index" asp-route-id="@item.ProductId"
                                               class="btn btn-sm btn-outline-secondary ms-2">
                                                <i class="fas fa-info-circle"></i> Детайли
                                            </a>
                                        </li>
                                    }
                                </ul>


                                <!-- Request Cancellation -->
                                @if (order.Status == OrderStatus.Processing)
                                {
                                    <a asp-action="CancelRequest" asp-route-id="@order.Id"
                                       class="btn btn-danger flex-grow-1 text-center">
                                        <i class="bi bi-x-circle"></i> Request Cancellation
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Updated Styling -->
<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.03);
        }

    .badge {
        font-size: 14px;
        padding: 8px;
    }

    .card .btn {
        text-align: center;
        font-size: 14px;
        padding: 8px 12px;
        min-width: 30%;
    }

        .card .btn i {
            margin-right: 5px;
        }

    /* Fix Media Query */
    media (max-width: 768px) {
        .card .btn

    {
        width: 100%; /* Full-width buttons on smaller screens */
    }

    }
</style>