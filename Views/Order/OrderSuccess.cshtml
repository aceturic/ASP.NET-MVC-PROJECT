@{
    ViewData["Title"] = "Order Success";
}
<!-- Optional: Include Bootstrap CSS in your layout if not already added -->

<style>
    body {
        background: #f7f9fc;
    }
    .order-container {
        margin-top: 100px;
    }
    .order-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        background: #fff;
    }
    .order-card .card-body {
        padding: 2rem;
        text-align: center;
    }
    .order-card h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #28a745;
    }
    .order-card p {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 1.5rem;
    }
    .btn-back {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }
</style>

<div class="container order-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card order-card">
                <div class="card-body">
                    <h2>Order Placed Successfully!</h2>
                    <p>Thank you for your purchase. Your order will be processed soon.</p>
                    <a asp-controller="Store" asp-action="Index" class="btn btn-primary btn-back">Back to Store</a>
                </div>
            </div>
        </div>
    </div>
</div>
