@model IEnumerable<UsersApp.Models.Order>

@{
    ViewData["Title"] = "Purchase History";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Delivery Address</th>
            <th>City</th>
            <th>Zip Code</th>
            <th>User Email</th>
            <th>Order Date</th>
            <th>Actions</th> <!-- New column for action buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Product?.Name</td>
                <td>@order.Price</td>
                <td>@order.DeliveryAddress</td>
                <td>@order.City</td>
                <td>@order.ZipCode</td>
                <td>@order.UserEmail</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>
                    <!-- Edit Button -->
                    <a href="@Url.Action("Edit", "PurchaseHistoryAdmin", new { id = order.Id })" class="btn btn-primary btn-sm">Edit</a>
                    <!-- Delete Button -->
                    <a href="@Url.Action("Delete", "PurchaseHistoryAdmin", new { id = order.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
