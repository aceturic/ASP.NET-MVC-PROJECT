@model UsersApp.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Edit Order</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label"></label>
                            <input asp-for="ProductId" class="form-control" required placeholder="Enter product ID" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" required placeholder="Enter price" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" required placeholder="Enter first name" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" required placeholder="Enter last name" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeliveryAddress" class="form-label"></label>
                            <input asp-for="DeliveryAddress" class="form-control" required placeholder="Enter delivery address" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" required placeholder="Enter city" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Country" class="form-label"></label>
                            <input asp-for="Country" class="form-control" required placeholder="Enter country" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ZipCode" class="form-label"></label>
                            <input asp-for="ZipCode" class="form-control" required placeholder="Enter zip code" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" required placeholder="Enter phone number" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserEmail" class="form-label"></label>
                            <input asp-for="UserEmail" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrderDate" class="form-label"></label>
                            <input asp-for="OrderDate" class="form-control" readonly />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
