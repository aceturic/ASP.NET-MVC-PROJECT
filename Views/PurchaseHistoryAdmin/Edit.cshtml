@model UsersApp.Models.Order

@{
    ViewData["Title"] = "Edit Order";
    var itemList = Model.Items.ToList(); 
}

<div class="container mt-5">
    <h2>Edit Order</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Клиентски данни -->
        <div class="row mb-3">
            <div class="col">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="DeliveryAddress" class="form-label"></label>
            <input asp-for="DeliveryAddress" class="form-control" />
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="col">
                <label asp-for="ZipCode" class="form-label"></label>
                <input asp-for="ZipCode" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="UserEmail" class="form-label"></label>
            <input asp-for="UserEmail" class="form-control" readonly />
        </div>

        <!-- Продукти в поръчката -->
        <h4>Products in Order</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < itemList.Count; i++)
                {
                    <tr>
                        <td>@itemList[i].Product?.Name</td>
                        <td>
                            <input type="number" name="Items[@i].Quantity" class="form-control" value="@itemList[i].Quantity" min="1" />
                            <input type="hidden" name="Items[@i].ProductId" value="@itemList[i].ProductId" />
                        </td>
                        <td>@itemList[i].Price.ToString("C")</td>
                        <td>
                            <a asp-action="RemoveProductFromOrder"
                               asp-route-orderId="@Model.Id"
                               asp-route-productId="@itemList[i].ProductId"
                               class="btn btn-sm btn-danger">Remove</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

        <div class="mb-3">
            <label class="form-label">Add Product by ID</label>
            <input type="number" name="NewProductId" class="form-control" placeholder="Enter Product ID to add" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
