@model Order

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Purchase</h2>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Product</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.Product">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Delivery Address</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DeliveryAddress">
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">City</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Zip Code</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ZipCode">
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">User Email</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.UserEmail">
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="PurchaseHistory" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
