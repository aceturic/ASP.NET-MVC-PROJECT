@model List<Product>
@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="fas fa-box-open"></i> Product Management</h2>
        </div>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success ripple" asp-controller="Products" asp-action="Create">
            <i class="fas fa-plus"></i> New Product
        </a>
    </div>

    <div class="table-responsive">
        <table class="table modern-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Image</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Brand</td>
                        <td>@product.Category</td>
                        <td class="fw-bold text-success">@(product.Price)$</td>
                        <td>@product.Quantity</td>
                        <td>
                            <img src="~/products/@product.ImageFileName" alt="@product.Name" class="product-img" />
                        </td>
                        <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td class="action-buttons">
                            <a class="btn btn-sm btn-primary ripple" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-sm btn-danger ripple" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure?')">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="toast" class="toast-custom">
        <div class="toast-content">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
            <div class="progress-bar"></div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let toast = document.getElementById("toast");
            toast.classList.add("show");

            setTimeout(() => {
                toast.classList.remove("show");
            }, 4000);
        });
    </script>
}

<style>
    body {
        background: #f4f7f9;
        font-family: 'Poppins', sans-serif;
        transition: background 0.3s, color 0.3s;
    }

    .dark-mode {
        background: #222;
        color: #fff;
    }

    .modern-table {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

        .modern-table thead {
            background: #007bff;
            color: white;
        }

    .dark-mode .modern-table {
        background: rgba(40, 40, 40, 0.9);
        color: white;
    }

        .dark-mode .modern-table thead {
            background: #333;
        }

    .modern-table th, .modern-table td {
        padding: 12px;
        text-align: center;
    }

    .modern-table tbody tr:hover {
        background: rgba(0, 123, 255, 0.1);
    }

    .dark-mode .modern-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .product-img {
        max-width: 80px;
        border-radius: 8px;
        transition: transform 0.3s;
    }

        .product-img:hover {
            transform: scale(1.1);
        }

    .action-buttons a {
        margin: 0 5px;
    }

    .dark-mode .btn-primary {
        background: #0056b3;
        border: none;
    }

    .dark-mode .btn-danger {
        background: #c82333;
    }

    .toast-custom {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: #28a745;
        color: white;
        padding: 15px 20px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        opacity: 0;
        transform: translateY(50px);
        transition: opacity 0.5s, transform 0.5s;
    }

    .dark-mode .toast-custom {
        background: #1d632e;
    }

    .toast-custom.show {
        opacity: 1;
        transform: translateY(0);
    }

    .toast-content i {
        font-size: 20px;
        margin-right: 10px;
    }

    .progress-bar {
        height: 4px;
        background: white;
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
        animation: progress 4s linear forwards;
    }

    .dark-mode .progress-bar {
        background: #aaa;
    }

    keyframes progress {
        from

    {
        width: 100%;
    }

    to {
        width: 0;
    }

    }

    .dark-mode .btn-dark {
        background: #fff;
        color: #000;
    }

        .dark-mode .btn-dark:hover {
            background: #ccc;
        }

    .ripple {
        position: relative;
        overflow: hidden;
    }

        .ripple::after {
            content: "";
            position: absolute;
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.5);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0);
            border-radius: 50%;
            opacity: 0;
            transition: transform 0.4s ease-out, opacity 0.4s ease-out;
        }

        .ripple:active::after {
            transform: translate(-50%, -50%) scale(2);
            opacity: 1;
        }
</style>

