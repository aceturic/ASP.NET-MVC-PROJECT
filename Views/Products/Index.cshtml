@model List<Product>
@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-5">List of Products</h2>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Image</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Brand</td>
                    <td>@product.Category</td>
                    <td>@(product.Price)$</td>
                    <td>
                        <img src="~/products/@product.ImageFileName" alt="@product.Name" style="max-width: 100px;" />
                    </td>
                    <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        @* <a class="btn btn-sm btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure?')">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
